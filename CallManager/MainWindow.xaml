<Window x:Class="CallManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CallManager"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        ResizeMode="CanMinimize"
        Title="CallManager" 
        WindowStyle="ToolWindow" Height="150" Width="500"
        Closing="OnClose" StateChanged="OnStateChanged" IsVisibleChanged="OnIsVisibleChanged"
        >
    <Grid Background="LightCoral">
        <TextBox Background="White" BorderThickness="0" x:Name="TBOutput" Height="70" VerticalAlignment="Top" HorizontalAlignment="Stretch" VerticalScrollBarVisibility="Auto" />
        <Button Background="White" Height="25" Width="100" Content="Dismiss Call" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10" Click="Button_Click"/>
    </Grid>
</Window>
